<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="crm_team_view_form_inherit_cindrebay" model="ir.ui.view">
        <field name="name">crm.team.view.form.inherit.cindrebay</field>
        <field name="model">crm.team</field>
        <field name="inherit_id" ref="sales_team.crm_team_view_form"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='company_id']" position="after">
                <field name="preferred_branches" placeholder="e.g. kochi, calicut, trivandrum"/>
            </xpath>
        </field>
    </record>
</odoo>
